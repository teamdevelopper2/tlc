{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2><i class="glyphicon glyphicon-user"></i> Liste des factures</h2>
                </div>
                <div class="box-content">
                    <div class="box-content">
                        <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                            <thead>
                            <tr>
                                <th>ID Facture</th>
                                <th>ID Client</th>
                                <th>Date Commande</th>
                                <th>Montant</th>
                                <th>Print</th>
                                <th>Edit</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for ordersale in ordersales %}
                                <tr>
                                    <td>{{ ordersale.id }}</td>
                                    <td>{{ ordersale.client.fisrtname }} {{ ordersale.client.lastname }}</td>
                                    <td>{{ ordersale.dateOrder | date('d/m/Y')}}</td>
                                    <td>{{ ordersale.totalAmount }}</td>
                                    <td class="center">
                                        <a class="btn btn-sm btn-info" href="{{ path('ordersale_validate_command', {'id': ordersale.id}) }}">
                                            <i class="glyphicon glyphicon-print icon-white"></i>
                                            Edit
                                        </a>
                                    </td>
                                    <td class="center">
                                        <a class="btn btn-sm btn-danger" href="#">
                                            <i class="glyphicon glyphicon-trash icon-white"></i>
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
