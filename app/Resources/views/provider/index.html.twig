{% extends 'base.html.twig' %}
{% block navigate %}
    <div>
        <ul class="breadcrumb">
            <li>
                <a href="#">Fournisseur</a>
            </li>
            <li>
                <a href="#">Liste</a>
            </li>
        </ul>
    </div>
{% endblock %}
{% block body %}
    <a class="btn btn-success btn-sm" href="{{ path('provider_new') }}"><i class="glyphicon glyphicon-plus"></i></a>

    <div class="row">
        <div class="box col-md-12">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2><i class="glyphicon glyphicon-user"></i> Liste des Fournisseurs</h2>
                </div>
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for provider in providers %}
                            <tr>
                                <td><a href="{{ path('product_show', { 'id': provider.id }) }}">{{ provider.id }}</a></td>
                                <td>{{ provider.name }}</td>
                                <td>{{ provider.phone }}</td>
                                <td>{{ provider.address }}</td>
                                <td>{{ provider.email }}</td>
                                <td class="center">
                                    <a class="btn btn-success" href="{{ path('provider_show', { 'id': provider.id }) }}">
                                        <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                                    </a>
                                    <a class="btn btn-info" href="{{ path('provider_edit', { 'id': provider.id }) }}">
                                        <i class="glyphicon glyphicon-edit icon-white"></i>
                                    </a>
                                    <a class="btn btn-danger" href="#">
                                        <i class="glyphicon glyphicon-trash icon-white"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

