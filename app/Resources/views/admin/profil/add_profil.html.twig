<form role="form" method="post" id="frmProfilAdd">
    <div class="alert alert-danger" id="flashErrorFrom" hidden="hidden">{{ form_errors(form) }}</div>

    <div class="form-group">
        <label for="exampleInput">Role</label>
        {{ form_errors(form.role) }}
        {{ form_widget(form.role, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du role'} }) }}
    </div>
    <div class="form-group">
        <label for="">Description</label>
        {{ form_errors(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'} }) }}
    </div>
    {{ form_widget(form._token) }}
    <div class="form-group">
    </div>
    <input  class="btn btn-sm btn-success" value="Ajouter" onclick="addProfil()">
    <img src="{{ asset('img/minload.gif') }}" alt="loading" id="loadingProfil" hidden="hidden">
</form>

<script>
    if($('#flashErrorFrom').html() !== ''){
      $('#flashErrorFrom').removeAttr('hidden');
    }
    else $('#flashErrorFrom').attr('hidden', 'hidden');
</script>